---
const images = Array.from({ length: 10 }, (_, i) => `/images/bookeklubhuset_${i + 1}.webp`);
---

<div x-data="{ current: 0, images: {{ JSON.stringify(images) }} }" class="relative w-full max-w-4xl mx-auto" x-init="$watch('current', val => {
       if (val < 0) current = images.length - 1;
       if (val >= images.length) current = 0;
     })">
  <!-- Billeder -->
  <div class="overflow-hidden rounded-2xl shadow-lg">
    <template x-for="(img, index) in images" :key="index">
      <div x-show="current === index" class="transition duration-500 ease-in-out">
        <img :src="img" alt="" class="w-full h-64 object-cover" loading="lazy" />
      </div>
    </template>
  </div>

  <!-- Forrige/Næste knapper -->
  <button @click="current--" class="absolute top-1/2 left-2 transform -translate-y-1/2 bg-white bg-opacity-70 hover:bg-opacity-100 p-2 rounded-full shadow"> ◀ </button>
  <button @click="current++" class="absolute top-1/2 right-2 transform -translate-y-1/2 bg-white bg-opacity-70 hover:bg-opacity-100 p-2 rounded-full shadow"> ▶ </button>

  <!-- Navigation dots -->
  <div class="flex justify-center mt-4 space-x-2">
    <template x-for="(img, index) in images" :key="index">
      <button @click="current = index" :class="{'bg-blue-500': current === index, 'bg-gray-300': current !== index}" class="w-3 h-3 rounded-full focus:outline-none transition-all"></button>
    </template>
  </div>
</div>
