---
import Link from "../components/Link.astro";
const { url = "#", overskrift = "", tekst = "", knap_tekst = "" } = Astro.props;
---

<article class="@container card bg-brown-100 px-l py-ml rounded-10 lg:rounded-15">
  <a href={url}>
    <section class="flex flex-col gap-ml">
      <div class="flex flex-col gap-m">
        <h4 class="text-center text-m_h4 lg:text-d_h4 font-montserrat">{overskrift}</h4>
        <p class="text-m_p lg:text-d_p font-opensans">{tekst}</p>
      </div>
      <div class="flex justify-end">
        <Link href="#" target="_blank" variant="tertiary" size="small" hover="tertiary">{knap_tekst}</Link>
      </div>
    </section>
  </a>
</article>
