---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import Card_vsbvsl from "../components/Card_vsbvsl.astro";
import Card_faciliteter from "../components/Card_faciliteter.astro";
import Card_kontakt from "../components/Card_kontakt.astro";
import Card_nyhed from "../components/Card_nyhed.astro";
import Card_nyhed_full from "../components/Card_nyhed_full.astro";
import { Image } from "astro:assets";
import CardNyhedFull from "../components/Card_nyhed_full.astro";
import billede_hero_kontakt from "../assets/images/hero_undersider_kontakt.webp";
---

<MainLayout title="Titel">
  <article class="flex flex-col gap-4xl lg:gap-10xl">
    <!-- Herosektion -->
    <section class="lg:mx-0 2xl:mx-10xl grid lg:grid-cols-5 pt-ml lg:pt-8xl lg:gap-6xl">
      <div class="col-span-2 pb-ml">
        <h1 class="text-m_h1 lg:text-d_h1 font-montserrat pb-s">Havnen</h1>
        <p class="text-m_p lg:text-d_p font-opensans pb-sm lg:pb-ml">Veddelev Havn er en mindre lystbådehavn beliggende nord for Roskilde med en smuk udsigt over Roskilde Fjord.</p>
        <div class="flex flex-col gap-s lg:gap-m">
          <Link href="#" target="_blank" variant="primary" size="large" hover="primary" press="primary">primary large</Link>
          <Link href="#" target="_blank" variant="secondary" size="small" hover="primary" press="primary">primary small</Link>
        </div>
      </div>
      <div class="col-span-3">
        <Image src={billede_hero_kontakt} alt="Billede af..." class="rounded-10 lg:rounded-15" />
      </div>
    </section>
    <!-- Én havn to foreninger -->
    <section class="mx-9xl">
      <h3 class="text-m_h3 lg:text-d_h3 font-montserrat pb-m">Én havn – to foreninger</h3>
      <div class="grid grid-cols-2 gap-10">
        <Card_vsbvsl
          url=""
          overskrift="VSB"
          tekst1="Veddelev Strand Bådelaug er en"
          bold1="sejlklub"
          tekst2="beliggende på Veddelev Havn. Klubben har omkring"
          bold2="300 medlemmer"
          tekst3="og tilbyder både sejlerskole, kapsejladser og sociale aktiviteter året rundt. Med faciliteter som klubhus, masteskur og gode havneforhold danner sejlklubben rammen om et aktivt og inkluderende"
          bold3="sejlerfællesskab"
          tekst4="på havnen."
          knap_tekst="Læs mere om sejlklubben"
        />
        <Card_vsbvsl
          url=""
          overskrift="VSL"
          tekst1="Veddelev Strands Lystbådehavn AmbA er et andelsselskab med"
          bold1="110 andelshavere"
          tekst2=", der i fællesskab ejer og driver lystbådehavnen. Havnen har"
          bold2="117 bådpladser"
          tekst3="af forskellig størrelse, som bestyrelsen fordeler mellem andelshaverne en gang årligt."
          bold3=""
          tekst4=""
          knap_tekst="Læs mere om andel"
        />
      </div>
    </section>

    <!-- Blandet komponenter -->
    <article class="my-20xl mx-5xl">
      <p class="pb-20 font-black">BLANDET KOMPONENTER</p>
      <div class="grid grid-cols-2 gap-10">
        <Card_vsbvsl
          url=""
          overskrift="VSL"
          tekst1="Veddelev Strands Lystbådehavn AmbA er et andelsselskab med"
          bold1="110 andelshavere"
          tekst2=", der i fællesskab ejer og driver lystbådehavnen. Havnen har"
          bold2="117 bådpladser"
          tekst3="af forskellig størrelse, som bestyrelsen fordeler mellem andelshaverne en gang årligt."
