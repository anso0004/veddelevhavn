---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import Formular_full from "../components/Formular_full.astro";
import Card_hjaelp from "../components/Card_hjaelp.astro";
import Card_fakta from "../components/Card_fakta.astro";
import Karrusel_klubhus from "../components/Karrusel_klubhus.astro";
import Card_nyhed_full from "../components/Card_nyhed_full.astro";
import Card_faciliteter from "../components/Card_faciliteter.astro";
import Hero from "../components/Hero.astro";
import billede_hero_kontakt from "../assets/images/hero_undersider_kontakt.webp";
import joller1 from "../assets/images/jollerpaahavnen_1.webp";
import joller2 from "../assets/images/jollerpaahavnen_2.webp";
import laeratsejle from "../assets/images/laeratsejle_2.webp";
import vaerefrivillig from "../assets/images/vaerefrivillig.webp";
import proviantere from "../assets/images/proviantere.webp";
import video_mp4 from "../assets/videos/havnen_video_stor.mp4";
import video_roskilde_mp4 from "../assets/videos/roskilde_video_stor.mp4";
import ikon_video from "../assets/icons/video.svg";
import { Image } from "astro:assets";
---

<MainLayout title="Titel">
  <article class="flex flex-col gap-4xl lg:gap-10xl">
    <!-- Herosektion -->
    <section class="mx-ml lg:mx-5xl xl:mx-9xl 2xl:mx-11xl">
      <Hero gemt_video="hidden" overskrift="Gæstesejler" tekst="Veddelev Havn er en lystbådhavn, som er beliggende naturskønt ved Roskilde Fjord – kun få kilometer fra Roskilde centrum." billede_foto="/hero_undersider_gaestesejler.webp" billede_foto_alt="både i havnen med udkig til klubhuset" knap_tekst1="Priser" knap_tekst2="Faciliteter" url1="#fakta" url2="#g_faciliteter" />
    </section>
    <section id="fakta" class="mx-ml lg:mx-5xl xl:mx-9xl 2xl:mx-11xl">
      <div class="grid gap-ml lg:grid-cols-3 items-start">
        <Card_fakta overskrift="Priser" underoverskrift="190 kr. per overnatning" tekst1="Prisen for en overnatning i Veddelev Havn er 190 kr. for alle både. Dette er inklusiv miljøafgift og strøm samt adgang til bad- og toiletfaciliteter." />
        <Card_fakta overskrift="Betaling" underoverskrift="Betalingen foregår via MobilePay til 81527." tekst1="Betalingen for en overnatning foregår via MobilePay til 81527. Koden til klubhuset, toilet og bad samt sejlerstuen bliver efter betaling sendt til mobilnummeret." tekst2="Oplever du problemer eller har du spørgsmål så kontakt havnefogeden her." />
        <Card_fakta overskrift="Bådstørrelse" underoverskrift="Max 14,5 m x 4,5 m" tekst1="Havnen kan tage imod både op til 14,5 meter i længden og 4,5 meter i bredden." tekst2="Ledige gæstepladser er markeret med grønne skilte." />
      </div>
    </section>
    <!-- Besøg roskilde -->
    <section class="mx-ml lg:mx-5xl xl:mx-9xl 2xl:mx-11xl">
      <div class="lg:grid lg:grid-cols-8 gap-m lg:gap-ml">
        <div class="lg:order-2 lg:col-start-6 lg:col-span-3">
          <h3 class="text-m_h3 lg:text-d_h3 font-montserrat pb-m">Besøg Roskilde By, når du overnatter i Veddelev</h3>
          <p class="text-m_p lg:text-d_p font-opensans pb-m">Roskilde by er en af Danmarks ældste byer. Her kan du tage på Vikingemuseeum, besøge Roskilde Domkirke eller du kan tage en slentretur gennem gågaden der er fyldt med liv og butikker for enhver smag.</p>
          <p class="text-m_p lg:text-d_p font-opensans">Tag bus 203 eller 204 fra Fiskervejen, kun 200 m fra Veddelev Havn og du vil ankomme i Roskilde by.</p>
        </div>
        <div class="relative lg:col-start-1 lg:col-span-5 pt-m lg:pt-null">
          <div class="absolute z-50 bottom-m left-m">
            <Link href="#" target="_blank" variant="primary" size="large" hover="primary" press="primary" textcolor="primary" showIcon={false}>Google Maps</Link>
          </div>
          <div class="relative w-full lg:h-full 2xl:h-[500px] overflow-hidden" id="videoonhover" x-data>
            <div class="absolute top-sm right-sm">
              <Image src={ikon_video} alt="" class="" />
            </div>
            <video class="rounded-10 lg:rounded-15 w-full h-full object-cover object-[0%_25%]" x-ref="hovervideo" @mouseenter="$refs.hovervideo.play()" @mouseleave="$refs.hovervideo.pause()">
              <source src={video_roskilde_mp4} type="" />
              <!-- <source src="" type="video/webm" /> -->
            </video>
          </div>
        </div>
      </div>
    </section>
    <!-- Nyheder -->
    <section class="">
      <Card_nyhed_full />
    </section>

    <!-- Faciliteter -->
    <section id="g_faciliteter" class="mx-ml lg:mx-5xl xl:mx-9xl 2xl:mx-11xl">
      <h2 class="text-m_h2 lg:text-d_h2 font-montserrat pb-m lg:pb-xl">Faciliteter ved besøg</h2>
      <div class="grid gap-m lg:gap-xl lg:grid-cols-2">
        <Card_faciliteter icon="public/ikoner/sejlerstue.svg" iconalt="Ikon af sejlerstue" overskrift="Sejlerstue" tekst="Sejlerstuen har åbent når der er medlemmer på havnen. Her finder du en kaffemaskine, opvaskeudstyr, køleskab og service. " />
        <Card_faciliteter icon="public/ikoner/havnekontor.svg" iconalt="Ikon af havnekontor" overskrift="Havnekontor" tekst="Havnekontoret ligger ved klubhuset og fungerer som base for havnefogeden, som står for den daglige drift og er kontaktperson ved spørgsmål." />
        <Card_faciliteter icon="public/ikoner/bad.svg" iconalt="Ikon af bad" overskrift="Toilet og bad" tekst="Toilet- og badefaciliteterne findes i klubhuset. Gæstesejlere modtager en adgangskode til klubhuset, når betaling for havnepladsen er registreret." />
        <Card_faciliteter icon="public/ikoner/kran.svg" iconalt="Ikon af kran" overskrift="Bedding, mastekran og slæbested" tekst="Som gæst er du velkommen til at benytte vores bedding og mastekran. Du skal dog være medlem af sejlklubben for at benytte slæbestedet." />
        <Card_faciliteter icon="public/ikoner/vand.svg" iconalt="Ikon af vand" overskrift="Vand og strøm" tekst="Der er strømstandere og vandslanger på alle broer, så bådejere og gæstesejlere nemt kan tilkoble el eller fylde vandtanken." />
        <Card_faciliteter icon="public/ikoner/udtoemning.svg" iconalt="Ikon af udtømning" overskrift="Udlagskumme for kemisk toilet" tekst="Du kan tømme dit kemiske toilet i vores udslagskumme. Den finder du ved skraldespandene på parkeingspladsen. " />
        <Card_faciliteter icon="public/ikoner/grill.svg" iconalt="Ikon af grill" overskrift="Grill" tekst="Du må frit benytte klubhusets fælles grill. Du finder den til højre for klubhuset. Du må ikke benytte din egen grill på havnen." />
        <Card_faciliteter icon="public/ikoner/redning.svg" iconalt="Ikon af redning" overskrift="Redning og sikkerhed" tekst="Havnen er certificeret som Sikker Havn, hvilket betyder, at der er redningstiger og redningskranse strategiske placeret overalt på havneområdet for maksimal sikkerhed." />
      </div>
    </section>

    <!-- Proviantere -->
    <section class="mx-ml lg:mx-5xl xl:mx-9xl 2xl:mx-11xl">
      <div class="lg:grid lg:grid-cols-8">
        <div class="lg:col-start-3 lg:col-span-6 xl:col-start-3 2xl:col-span-5">
          <h2 class="text-m_h2 lg:text-d_h2 font-montserrat pb-m">Har du brug for at proviantere?</h2>
          <p class="text-m_p lg:text-d_p font-opensans pb-ml lg:max-w-[471px]">Du kan proviantere i Himmelev kun 3 km fra havnen. Her finder du et supermarked. Du kan også tage en tur ind til Roskilde by, hvor der er mange indkøbsmuligheder.</p>
        </div>
        <div class="relative lg:col-start-4 lg:col-span-5">
          <div class="absolute z-50 bottom-m left-m">
            <Link href="#" target="_blank" variant="primary" size="large" hover="primary" press="primary" textcolor="primary" showIcon={false}>Google Maps</Link>
          </div>
          <Image src={proviantere} alt="Billede af skilt på havnen" class="rounded-10 lg:rounded-15 w-full h-full object-cover object-[52%_25%]" />
        </div>
      </div>

      <!-- Kopi af sikker havn -->

      <!-- Brug som eksempel til de andre sider -->
