---
import MainLayout from "../layouts/MainLayout.astro";
import Link from "../components/Link.astro";
import Formular_full from "../components/Formular_full.astro";
import Card_fakta from "../components/Card_fakta.astro";
import Hero from "../components/Hero.astro";
import Karrusel_klubhus from "../components/Karrusel_klubhus.astro";
import Card_nyhed_full from "../components/Card_nyhed_full.astro";
import joller1 from "../assets/images/jollerpaahavnen_1.webp";
import joller2 from "../assets/images/jollerpaahavnen_2.webp";
import laeratsejle from "../assets/images/laeratsejle_2.webp";
import vaerefrivillig from "../assets/images/vaerefrivillig.webp";
import ikon_video from "../assets/icons/video.svg";
import video_laeratsejle_mp4 from "../assets/videos/laeratsejle_video_stor.mp4";
import video_kapsejlads_mp4 from "../assets/videos/kapsejlads_video_stor.mp4";
import { Image } from "astro:assets";
---

<MainLayout title="Titel">
  <article class="flex flex-col gap-4xl lg:gap-10xl">
    <!-- Herosektion -->
    <section class="mx-ml lg:mx-5xl xl:mx-9xl 2xl:mx-11xl">
      <Hero gemt_billede="hidden" overskrift="Sejlklub" tekst="VSB Sejlklub er en aktiv forening for sejlere på Veddelev Havn. Klubben tilbyder både sejlerskole, kapsejlads og sociale arrangementer året rundt." video="/sejlklub_video_stor.mp4" video_type="video/mp4" knap_tekst1="Medlemsskab" knap_tekst2="Kontakt" url1="#tilmeld" url2="/kontakt" />
    </section>
    <!-- formular til sejlklub -->
    <section id="tilmeld" class="mx-ml lg:mx-5xl xl:mx-9xl 2xl:mx-11xl">
      <Formular_full />
    </section>
    <!-- Pris på medlemsskab -->
    <section class="mx-ml lg:mx-5xl xl:mx-9xl 2xl:mx-11xl grid gap-s">
      <h4 class="text-m_h4 lg:text-d_h4 font-montserrat">Pris på medlemskontigenter</h4>
      <!-- mobile -->
      <div>
        <div class="border-b-1 border-neutral-950 grid gap-s pb-s lg:hidden">
          <h8 class="text-m_h8 font-opensans">Junior medlemsskab </h8>
          <p class="text-m_p font-opensans">Alder: 8-18 år</p>
          <p class="text-m_p font-opensans">Pris 2025: 200 kr. årligt</p>
          <p class="text-m_p font-opensans">Indmeldelsesgebyr 0 kr.</p>
        </div>
        <div class="border-b-1 border-neutral-950 grid gap-s pb-s lg:hidden">
          <h8 class="text-m_h8 font-opensans">Ung medlemsskab </h8>
          <p class="text-m_p font-opensans">Alder: 19-25 år</p>
          <p class="text-m_p font-opensans">Pris 2025: 300 kr. årligt</p>
          <p class="text-m_p font-opensans">Indmeldelsesgebyr 150 kr.</p>
        </div>
        <div class="border-b-1 border-neutral-950 grid gap-s pb-s lg:hidden">
          <h8 class="text-m_h8 font-opensans">Senior samlevende medlemsskab </h8>
          <p class="text-m_p font-opensans">Alder: &gt;25 år</p>
          <p class="text-m_p font-opensans">Pris 2025: 400 kr. årligt per person</p>
          <p class="text-m_p font-opensans">Indmeldelsesgebyr 150 per person kr.</p>
        </div>
        <div class="border-b-1 border-neutral-950 grid gap-s pb-s lg:hidden">
          <h8 class="text-m_h8 font-opensans">Senior medlemsskab </h8>
          <p class="text-m_p font-opensans">Alder: &gt;25 år</p>
          <p class="text-m_p font-opensans">Pris 2025: 700 kr. årligt</p>
          <p class="text-m_p font-opensans">Indmeldelsesgebyr 150 kr.</p>
        </div>
      </div>
      <!-- desktop -->
      <div class="hidden lg:block">
        <div class="grid grid-cols-4 gap-sm py-sm border-b-1 border-neutral-950">
          <h8 class="text-d_h8 font-opensans">Medlemsskab </h8>
          <h8 class="text-d_h8 font-opensans">Alder</h8>
          <h8 class="text-d_h8 font-opensans">Pris 2025</h8>
          <h8 class="text-d_h8 font-opensans">Indmeldelsesgebyr </h8>
        </div>
        <div class="grid grid-cols-4 gap-sm py-sm border-b-1 border-neutral-950">
          <p class="text-d_p font-opensans">Junior</p>
          <p class="text-d_p font-opensans">8 - 18 år</p>
          <p class="text-d_p font-opensans">200 kr. årligt</p>
          <p class="text-d_p font-opensans">0 kr.</p>
        </div>
        <div class="grid grid-cols-4 gap-sm py-sm border-b-1 border-neutral-950">
          <p class="text-d_p font-opensans">Ung</p>
          <p class="text-d_p font-opensans">19 - 25 år</p>
          <p class="text-d_p font-opensans">300 kr. årligt</p>
          <p class="text-d_p font-opensans">150 kr.</p>
        </div>
        <div class="grid grid-cols-4 gap-sm py-sm border-b-1 border-neutral-950">
          <p class="text-d_p font-opensans">Senior samlevende</p>
          <p class="text-d_p font-opensans">&gt;25 år</p>
          <p class="text-d_p font-opensans">400 kr. årligt per person</p>
          <p class="text-d_p font-opensans">150 per person kr.</p>
        </div>
        <div class="grid grid-cols-4 gap-sm py-sm lg:border-b-1 border-neutral-950">
          <p class="text-d_p font-opensans">Senior</p>
          <p class="text-d_p font-opensans">&gt;25 år</p>
          <p class="text-d_p font-opensans">700 kr. årligt</p>
          <p class="text-d_p font-opensans">150 kr.</p>
        </div>
      </div>
      <div class="pt-s lg:pt-sm">
        <Link href="#" target="_blank" variant="tertiary" size="small" hover="tertiary" textcolor="primary">Se alle priser for VSL Sejlklub</Link>
      </div>
    </section>
    <!-- Karrusel klubhus -->
    <section class="mx-ml lg:mx-5xl xl:mx-9xl 2xl:mx-11xl">
      <Karrusel_klubhus />
    </section>
    <!-- Nyhedssektion -->
    <section>
      <Card_nyhed_full />
    </section>
    <!-- Lær at sejle -->
    <section class="mx-ml lg:mx-5xl xl:mx-9xl 2xl:mx-11xl">
      <h2 class="text-m_h2 lg:text-d_h2 font-montserrat pb-m">Lær at sejle på VSB’s sejlerskole</h2>
      <div class="grid lg:grid-cols-2 lg:items-end pb-ml lg:pb-xl lg:gap-5xl max-w-[1050px]">
        <p class="text-m_p lg:text-d_p font-opensans lg:max-w-[471px] pb-sm">Sejlerskolen i VSB Sejlklub er for alle, der ønsker at lære at sejle på Roskilde Fjord og lære at håndtere en sejlbåd. I VSB Sejlerskole får du lært at sejle under forskellige vind og vejrforhold samt at navigere sikkert på fjorden.</p>
        <Link href="#" target="_blank" variant="primary" size="small" hover="primary" press="primary" textcolor="primary">Læs mere om sejlerskolen</Link>
      </div>
      <div class="relative w-full h-[350px] lg:h-[450px] 2xl:h-[450px] overflow-hidden grid grid-rows-5 lg:grid-cols-10 lg:grid-rows-10 gap-s lg:gap-l rounded-10 lg:rounded-15">
        <div class="relative w-full overflow-hidden rounded-10 lg:rounded-15 col-start-1 col-span-6 row-start-1 row-span-4 lg:col-start-1 xl:col-start-2 lg:col-span-7 xl:col-span-6 lg:row-start-1 lg:row-span-9 xl:row-start-1 xl:row-span-9 object-cover object-[52%_50%]" id="videoonhover" x-data>
          <div class="absolute top-sm right-sm">
            <Image src={ikon_video} alt="Ikon af videooptager" />
          </div>
          <video class="lg:hidden rounded-10 lg:rounded-15 w-full h-full object-cover object-[0%_25%]" controls autoplay muted loop>
            <source src={video_laeratsejle_mp4} type="video/mp4" />
          </video>
          <video class="hidden lg:flex rounded-10 lg:rounded-15 w-full h-full object-cover object-[0%_25%]" x-ref="hovervideo" @mouseenter="$refs.hovervideo.play()" @mouseleave="$refs.hovervideo.pause()">
            <source src={video_laeratsejle_mp4} type="video/mp4" />
          </video>
        </div>
        <Image src={laeratsejle} alt="Fender på båd i havnen" class="rounded-10 lg:rounded-15 col-start-7 col-span-4 row-start-2 row-span-4 lg:col-start-8 xl:col-start-8 lg:col-span-2 xl:col-span-2 lg:row-start-5 lg:row-span-6 xl:row-start-5 xl:row-span-6 w-full h-full object-cover object-[52%_25%]" />
      </div>
    </section>
    <!-- Frivillig -->
    <section class="mx-ml lg:mx-5xl xl:mx-9xl 2xl:mx-11xl">
      <h2 class="text-m_h2 lg:text-d_h2 font-montserrat pb-m">Vil du være frivillig på havnen?</h2>
      <div class="grid lg:grid-cols-5 lg:items-end pb-ml lg:gap-ml">
        <div class="lg:order-2 lg:col-start-3 lg:col-span-2 pb-ml lg:pb-null">
          <p class="text-m_p lg:text-d_p font-opensans lg:max-w-[471px] pb-sm">Som frivillig kan du bidrage til alt fra praktiske opgaver i havnen til afvikling af arrangementer og aktiviteter. Det er en god måde at lære andre at kende og være en aktiv del af fællesskabet i VSB Sejlklub.</p>
          <Link href="/kontakt" target="_self" variant="primary" size="large" hover="primary" press="primary" textcolor="primary">Kontakt os</Link>
        </div>
        <Image src={vaerefrivillig} alt="Billede af to mænd på havnen foran deres båd" class="rounded-10 lg:rounded-15 lg:col-start-1 lg:col-span-2 w-full h-full object-cover object-[52%_25%]" />
      </div>
    </section>
    <!-- Link til pdf'er -->
    <section class="px-ml lg:px-5xl xl:px-12xl 2xl:px-15xl bg-brown-100 py-2xl lg:py-6xl grid gap-4xl lg:grid-cols-2 lg:gap-11xl">
      <div class="flex flex-col lg:items-center">
        <div>
          <h6 class="text-m_h7 lg:text-d_h7 font-montserrat">Referater for generalforsamlinger</h6>
          <Link href="#" target="_blank" variant="tertiary" size="small" hover="tertiary" textcolor="primary">Læs pdf</Link>
        </div>
      </div>
      <div class="flex flex-col lg:items-center">
        <div>
          <h6 class="text-m_h7 lg:text-d_h7 font-montserrat">Referater for bestyrelsesmøder</h6>
          <Link href="#" target="_blank" variant="tertiary" size="small" hover="tertiary" textcolor="primary">Læs pdf</Link>
        </div>
      </div>
    </section>
    <!-- Joller på havnen -->
    <section class="mx-ml lg:mx-5xl xl:mx-9xl 2xl:mx-11xl">
      <h2 class="text-m_h2 lg:text-d_h2 font-montserrat pb-m">Joller på havnen</h2>
      <div class="grid lg:grid-cols-2 lg:items-end pb-ml lg:pb-xl lg:gap-5xl max-w-[1050px]">
        <p class="text-m_p lg:text-d_p font-opensans lg:max-w-[471px] pb-sm lg:pb-null">Veddelev Havn har gode faciliteter for jolleejere – både til fritid, fiskeri og sejlads. Her finder du nem adgang til vandet og et aktivt jolleliv året rundt.</p>
        <Link href="#" target="_blank" variant="primary" size="small" hover="primary" press="primary" textcolor="primary">Læs mere om joller</Link>
      </div>
      <div class="relative w-full h-[350px] lg:h-[450px] 2xl:h-[450px] overflow-hidden grid grid-cols-10 grid-rows-5 lg:grid-cols-10 lg:grid-rows-10 gap-s lg:gap-l rounded-10 lg:rounded-15">
        <Image src={joller1} alt="Billede af finnjoller på land" class="rounded-10 lg:rounded-15 col-start-1 col-span-6 row-start-1 row-span-4 lg:col-start-1 xl:col-start-1 lg:col-span-7 xl:col-span-6 lg:row-start-1 lg:row-span-9 xl:row-start-1 xl:row-span-9 w-full h-full object-cover object-[52%_100%]" />
        <Image src={joller2} alt="Billede af reb på finnjolle" class="rounded-10 lg:rounded-15 col-start-7 col-span-4 row-start-2 row-span-4 lg:col-start-8 xl:col-start-7 lg:col-span-2 xl:col-span-2 lg:row-start-5 lg:row-span-6 xl:row-start-5 xl:row-span-6 w-full h-full object-cover object-[52%_75%]" />
      </div>
    </section>
    <!-- Kapsejladser -->
    <section class="mx-ml lg:mx-5xl xl:mx-9xl 2xl:mx-11xl">
      <h2 class="text-m_h2 lg:text-d_h2 font-montserrat pb-m lg:pb-ml text-center">Vil du være med til kapsejladser?</h2>
      <div class="grid lg:grid-cols-10 pb-ml lg:gap-ml xl:gap-ml">
        <div class="lg:col-start-1 lg:col-span-5 xl:col-start-1 xl:col-span-4 pb-ml lg:pb-null">
          <p class="text-m_p lg:text-d_p font-opensans lg:max-w-[471px] pb-sm lg:pb-2xl">Fra Veddelev Havn sejles der kapsejladser i på fjorden mellem Roskilde og Veddelev. Her mødes sejlere til hyggelige og konkurrencedygtige aftener i en afslappet stemning – uanset niveau.</p>
          <Link href="#" target="_blank" variant="primary" size="small" hover="primary" press="primary" textcolor="primary">Læs mere om kapsejladser</Link>
        </div>
        <div class="relative w-full h-[347px] overflow-hidden lg:col-start-6 lg:col-span-6 xl:col-start-5 2xl:col-span-5" id="videoonhover" x-data>
          <div class="absolute top-sm right-sm">
            <Image src={ikon_video} alt="Ikon af videooptager" />
          </div>
          <video class="lg:hidden rounded-10 lg:rounded-15 w-full h-full object-cover object-[0%_25%]" controls autoplay muted loop>
            <source src={video_kapsejlads_mp4} type="video/mp4" />
          </video>
          <video class="hidden lg:flex rounded-10 lg:rounded-15 w-full h-full object-cover object-[0%_25%]" x-ref="hovervideo" @mouseenter="$refs.hovervideo.play()" @mouseleave="$refs.hovervideo.pause()">
            <source src={video_kapsejlads_mp4} type="video/mp4" />
          </video>
        </div>
      </div>
    </section>
    <!-- Card_fakta -->
    <section class="mx-ml lg:mx-5xl xl:mx-9xl 2xl:mx-11xl">
      <div class="grid gap-ml lg:grid-cols-3 items-start">
        <Card_fakta overskrift="Havnefogede" tekst1="Havnefoged Tommy Jørgensen kan kontaktes på tlf. 51 90 66 75 eller mail havnefoged@vsb.dk." />
        <Card_fakta overskrift="Bestyrelsen" tekst1="Bestyrelsesformand Anders Vognsen kan kontaktes på tlf. 21 71 24 06." tekst2="Næstformand Anders Terkildsen kan kontaktes på tlf. 00 00 00 00. " />
        <Card_fakta overskrift="Tilmelding" tekst1="Har du spørgsmål til tilmelding af VSB Sejlklub, så kontakt Niels-Erik Hansen på tlf. 42 32 69 65. " />
      </div>
      <div class="pt-sm lg:pt-null flex justify-end">
        <Link href="/kontakt" target="_self" variant="primary" size="large" hover="primary" press="primary" textcolor="primary">Kontakt</Link>
      </div>
    </section>
  </article>
</MainLayout>
